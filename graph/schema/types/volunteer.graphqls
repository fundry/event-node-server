type Volunteer {
    id : Int!
    role : String!
    duration : String!
    isApproved : Boolean!
    team : [Team]
    team_id : Int # FK
    event: [Event]!
    event_id : Int! # FK
    user : [User]!
    user_id: Int! # FK
}

input CreateVolunteer {
    role: String!
    duration: String
    isApproved : Boolean
    user: CreateUser
    event: CreateEvent
}

input UpdateVolunteer {
    role: String
    isApproved: Int
    duration: String
    team: CreateTeam
    team_id : Int
}

