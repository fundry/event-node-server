type EventTalk {
    id : ID!
    isAccepted : Boolean!
    dateSubmitted: String!
    dateAccepted: String!
    reviewer_id : Int
    event : [Event!]
    event_id : Int!
    comment : String
    reviewer: [User!]
    draftId : Int!
    draft : [Talk!]
}

type MeetupGroups {
    id : ID!
    name : String!
    event: [Event]
    event_id  : Int!
